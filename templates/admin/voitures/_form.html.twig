{{ form_start(form) }}
<div class="row">
  <div class="col-md-4">{{ form_row(form.title) }}</div>
  <div class="col-md-4">{{ form_row(form.annee) }}</div>
</div>
<div class="row">
  <div class="col-md-3">{{ form_row(form.kilometrage) }}</div>
  <div class="col-md-3">{{ form_row(form.prix) }}</div>
  <div class="col-md-2">{{ form_row(form.chevaux) }}</div>
</div>
<div class="row">
  <div class="col-md-2">{{ form_row(form.porte) }}</div>
  <div class="col-md-2">{{ form_row(form.motorisation, {'attr': {'class': 'form-control'}}) }}</div>
  <div class="col-md-2">{{ form_row(form.gps, {'attr': {'class': 'form-control'}}) }}</div>
  <div class="col-md-2">{{ form_row(form.camera, {'attr': {'class': 'form-control'}}) }}</div>
</div>
<div class="row">
  <div class="col-md-4">{{ form_row(form.imageFile) }}</div>
  <div class="col-md-4">{{ form_row(form.imageCarousel1) }}</div>
</div>
<div class="row">
  <div class="col-md-4">{{ form_row(form.imageCarousel2) }}</div>
  <div class="col-md-4">{{ form_row(form.imageCarousel3) }}</div>
</div>
<div class="row">
  <div class="col-md-8">
    {{ form_row(form.description, {'attr': {'class': 'form-control', 'rows': 6 }}) }}
  </div>
</div>
{{ form_widget(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}
