{% extends "base.html.twig" %} {% block stylesheets %}
{{ parent() }}
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
  crossorigin="anonymous"
/>
{% endblock %} {% block title voiture.title %} {% block body %}
<div class="jumbotron" style="background-color: lightgrey">
  <div class="container">
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
      {{ message }}
    </div>
    {% endfor %} {% if not form.vars.valid %}
    <div class="alert alert-danger">Erreur dans le formulaire</div>
    {% endif %}
      <div class="col d-flex justify-content-around">
<div id="carouselExampleIndicators" class="carousel slide">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active" style="margin: 0.5rem 2rem 0.5rem 2rem;">
         {% if voiture.filename %}
         <img src="{{ vich_uploader_asset(voiture, "imageFile") }}" style="width: 600px;height: 400px;padding: 30px;" alt="imageFile">
         {% else %}
         <img src="{{ "/image/photo.jpg" }}" style="width: 600px;height: 400px;padding: 30px;"alt="imagefile">
   {% endif %}
    </div>
    <div class="carousel-item" style="margin: 0.5rem 2rem 0.5rem 2rem;"> 
         {% if voiture.nameImageCarousel1 %}
         <img src="{{ vich_uploader_asset(voiture, 'imageCarousel1') }}" style="width: 600px;height: 400px;padding: 30px;" alt="imageCarousel1">
         {% else %}
         <img src="{{ "/image/photo.jpg" }}" style="width: 600px;height: 400px;padding: 30px;"alt="imageCarousel1">
   {% endif %}
    </div>
    <div class="carousel-item"style="margin: 0.5rem 2rem 0.5rem 2rem;">
         {% if voiture.nameImageCarousel2 %}
         <img src="{{ vich_uploader_asset(voiture, 'imageCarousel2') }}" style="width: 600px;height: 400px;padding: 30px;" alt="imageCarousel2">
         {% else %}
         <img src="{{ "/image/photo.jpg" }}" style="width: 600px;height: 400px;padding: 30px;"alt="imageCarousel2">
   {% endif %}
    </div>
    <div class="carousel-item"style="margin: 0.5rem 2rem 0.5rem 2rem;">
         {% if voiture.nameImageCarousel3 %}
         <img src="{{ vich_uploader_asset(voiture, 'imageCarousel3') }}" style="width: 600px;height: 400px;padding: 30px;" alt="imageCarousel3">
         {% else %}
         <img src="{{ "/image/photo.jpg" }}" style="width: 600px;height: 400px;padding: 30px;" alt="imageCarousel3">
   {% endif %}
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

          <div class="col-md-4">
            <h1 class="mt-4 text-uppercase">{{ voiture.title }}</h1>
            <div style="font-size: 1.5rem">Année : {{ voiture.annee }}</div>
            <div style="font-size: 1.5rem">{{ voiture.kilometrage }} km</div>
            <div class="text-primary mb-2 mt-2" style="font-size: 3rem; font-weight: bold">
              Prix : {{ voiture.formatPrix }}
            </div>
            <a
              href="#!"
              class="btn btn-primary {{ form.vars.submitted ? 'hide-button' : 'show-button' }}"
              id="contactButton"
            >
              Contacter le garage
            </a>

            <div id="contactForm" class="{{ form.vars.submitted ? 'show-form' : 'hide-form' }}">
              {{ form_start(form) }}
              <div class="row">
                <div class="col">{{ form_row(form.firstname) }}</div>
                <div class="col">{{ form_row(form.lastname) }}</div>
              </div>
              <div class="row">
                <div class="col">{{ form_row(form.phone) }}</div>
                <div class="col">{{ form_row(form.email) }}</div>
              </div>
              {{ form_rest(form) }}
              <div class="form-group">
                <button class="btn btn-primary mb-4">Envoyer</button>
              </div>
              {{ form_end(form) }}
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container mt-5">
      <div class="row d-flex justify-content-around">
        <div class="col-md-7">
          <h2>Caractéristiques</h2>
          <table class="table table-striped">
            <tr>
              <td>Anné</td>
              <td>{{ voiture.annee }}</td>
            </tr>
            <tr>
              <td>Kilométrage</td>
              <td>{{ voiture.kilometrage }} km</td>
            </tr>
            <tr>
              <td>Chevaux fiscaux</td>
              <td>{{ voiture.chevaux }} cv</td>
            </tr>
            <tr>
              <td>Nombre de porte</td>
              <td>{{ voiture.porte }} portes</td>
            </tr>
            <tr>
              <td>GPS</td>
              <td>{{ voiture.gps }}</td>
            </tr>
            <tr>
              <td>Motorisation</td>
              <td>{{ voiture.motorisation }}</td>
            </tr>
            <tr>
              <td>Caméra de recul</td>
              <td>{{ voiture.camera }}</td>
            </tr>
          </table>
        </div>
        <div class="col-md-4">
          <h2>Déscription</h2>
          <p>{{ voiture.description | nl2br }}"</p>
        </div>
      </div>
    </div>
  </div>
</div>
    {% endblock %}
