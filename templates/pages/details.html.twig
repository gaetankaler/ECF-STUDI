{% extends "base.html.twig" %}
{% block stylesheets %}
{{ parent() }}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
{% endblock %}
{% block title voiture.title %}
{% block body %}
<div class="jumbotron" style="background-color: lightgrey;">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
  </div>
  <div class="col-md-4">
    <h1>{{ voiture.title }}</h1>
    <div class="text-primary" style="font-size:3rem;font-weight:bold;" >Prix : {{ voiture.formatPrix }}</div>
    <a href="{{ path("contact")}}" class="btn btn-primary" style="margin-bottom:10px">Contacter le garage</a>
  </div>
  </div>
</div>
</div>
<div class="container mt-4">
      <div class="row">
        <div class="col-md-8">
          <h2>Caractéristiques</h2>
          <table class="table table-striped">
            <tr>
              <td>Anné</td>
              <td>{{ voiture.annee }}</td>
            </tr>
            <tr>
              <td>Kilométrage</td>
              <td>{{ voiture.kilometrage }} km</td>
            </tr>
            <tr>
            <td>Chevaux fiscaux</td>
            <td>{{ voiture.chevaux }} cv</td>
            </tr>
            <tr>
              <td>Nombre de porte</td>
              <td>{{ voiture.porte }} portes</td>
            </tr>
            <tr>
              <td>GPS</td>
              <td>{{ voiture.gps }}</td>
            </tr>
            <tr>
              <td>Motorisation</td>
              <td>{{ voiture.motorisation }}</td>
            </tr>
            <tr>
              <td>Caméra de recul</td>
              <td>{{ voiture.camera }}</td>
            </tr>
          </table>
        </div>
        <div class="col-md-4">
          <h2>Déscription</h2>
        <p>{{ voiture.description | nl2br}}"</p>
      </div>
      </div>
          <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
      integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
{% endblock %}
